@model List<Note>//list of notes

@{
    ViewData["Title"]="List of Notes";
}

<div class="row">
    <div class="col-10 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-10">
                <h1 class="mt-2">List of Notes</h1>
            </div>
            <div class="col-2">
                <a class="btn btn-primary form-control" asp-action="create"><i class="bi bi-patch-plus"></i> Create Note</a>
            </div>
        </div>
        <hr />


        @if(Model.Count>0)
        {
            <div class="row">
                @foreach(var note in Model.OrderByDescending(x=>x.CreatedDate))
                {
                    <div class="col-4">
                        <div class="p-3 text-white rounded-2 my-3 btns-container" style="background-color: @note.Color;">
                            <h2>@note.Title</h2>
                            <hr />
                            <p>@note.Description</p>
                            <div class="top-btns">
                                <a asp-action="Edit" asp-route-id="@note.Id"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@note.Id"><i class="bi bi-trash3-fill"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>You Have not Written Any Notes</p>

        }


        
        
    </div>
</div>

<style>
    .btns-container{
        position: relative;

    }
    .top-btns{
        position:absolute;
        top: -0.6rem;
        right: 1rem;
    }
    .top-btns a{
        background-color: black;
        padding: 0.2rem;
        font-size: 1.2rem;
        border-radius: 50%;
        color: white;
    }
</style>